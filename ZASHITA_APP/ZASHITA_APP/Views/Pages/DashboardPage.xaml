<Page
    x:Class="ZASHITA_APP.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModels="clr-namespace:ZASHITA_APP.ViewModels.Pages"
    xmlns:converters="clr-namespace:ZASHITA_APP.Converters"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance viewModels:DashboardViewModel, IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringToColorConverter x:Key="StringToColorConverter" />
    </Page.Resources>

    <Grid VerticalAlignment="Top" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,10,10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="System Status"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="14"
                    Foreground="{Binding SystemStatus, Converter={StaticResource StringToColorConverter}, FallbackValue=Red}"
                    Text="Your system isnt clean and secure !" />
                <ProgressBar
                    Margin="0,10,0,0"
                    Value="40"
                    Maximum="100"
                    Height="10"
                    Foreground="{DynamicResource SystemAccentColorBrush}" />
                <TextBlock
                    Margin="0,5,0,0"
                    Text="40% Protected"
                    FontSize="12"
                    Foreground="Red" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,10,10,10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="Quick Actions"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ui:Button
                    Margin="0,10,0,0"
                    Content="Run quick Scan"
                    Icon="Fluent24" Click="Button_Click_1" />
                <ui:Button
                    Margin="0,10,0,0"
                    Content="Quarantine"
                    Icon="Fluent24"
                    Click="Button_Click" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="Threat Statistics"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Text="Total Files Scanned"
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="{Binding TotalFilesScanned, FallbackValue=0}"
                            FontSize="24"
                            FontWeight="Bold"
                            Name="tootalfilesscaned"
                            Foreground="{DynamicResource SystemAccentColorBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Text="Last Scan"
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="{Binding LastScan, FallbackValue='No scans yet'}"
                            FontSize="24"
                            Name="lastscanhaha"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SystemAccentColorBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock
                            Text="Malware Found"
                            FontSize="14"
                            Foreground="Red" />
                        <TextBlock
                            Text="{Binding MalwareFound, FallbackValue=0}"
                            FontSize="24"
                            Name="totalmalwaresdamn"
                            FontWeight="Bold"
                            Foreground="Red" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="HINTS"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ListView Margin="0,10,0,0">
                    <ListView Margin="10" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListViewItem Selected="ListViewItem_Selected">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Quick Scan :" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="Perform a quick scan to check temporary files for potential threats."/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Quarantine :" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="THIS APP HAS THE MIT LICENSE ... AUTHOR : @Thisismo7a"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Full Scan Alert :" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="Perform a quick scan to check temporary files for potential threats."/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Page>